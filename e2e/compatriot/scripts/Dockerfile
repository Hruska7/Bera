ARG GOVERSION
ARG GOARCH=arm64
ARG GOOS=darwin
ARG POLARD_VERSION=v0.0.0
ARG COMPATRIOT_PATH=./e2e/compatriot

# Use the latest foundry image
FROM polard-base:${POLARD_VERSION} as polard-compatriot

RUN apk add --no-cache bash jq

WORKDIR /

# Copy polard requirements
COPY ${COMPATRIOT_PATH}/config /config
COPY ${COMPATRIOT_PATH}/compatriot-init.sh /compatriot-init.sh

# Copy compatriot scripts
COPY ${COMPATRIOT_PATH}/scripts /scripts
COPY ${COMPATRIOT_PATH}/compatriot.sh /compatriot.sh

# Set the home directory
ENV HOME /
WORKDIR $HOME

CMD ["bash", "compatriot.sh"]
